@model IEnumerable<JDRC2237A3.Models.PlaylistBaseViewModel>

@{
    ViewBag.Title = "List of Playlist";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TracksCount)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span class="badge rounded-pill text-bg-secondary">@Html.DisplayFor(modelItem => item.TracksCount)</span>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlaylistId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlaylistId })
            </td>
        </tr>
    }

</table>
